<script>
import wepy from 'wepy'
import api from './../api/api'

export default class TestPage extends wepy.page {
  config = {
    navigationBarTitleText: '',
    backgroundColor: '#3FC5F4',
    navigationBarBackgroundColor: '#3FC5F4',
    navigationBarTextStyle: 'white',
    enablePullDownRefresh: true
  }
  data = {
    screenWidth: wepy.getSystemInfoSync().windowWidth,
    screenHeight: wepy.getSystemInfoSync().windowHeight,
    // dataList: [{type: 0, value0: 'awesome', value1: '', numOfAns: 9, user: {}, lang: 'English(US)'}, {type: 1, value0: 'fabulous', value1: '', numOfAns: 2, user: {}, lang: 'English(US)'}, {type: 2, value0: 'numerous', value1: '', numOfAns: 22, user: {}, lang: 'English(US)'}, {type: 3, value0: 'get', value1: 'take', numOfAns: 11, user: {}, lang: 'English(US)'}, {type: 4, value0: 'Is there any English teacher who can help me', value1: '', numOfAns: 1, user: {}, lang: 'English(US)'}],
    dataList: [],
    currentPage: -1,
    showModal: false,
    lang: '',
    type: '',
    by: 'all',
    titleArray: [['Question', '提问'], ['Answer', '回答'], ['Like!', '点赞'], ['Featured answer', '最佳答案'], ['Bookmark', '收藏']]
  }
  computed = {

  }
  async onLoad (option) {
    var lang = wepy.getStorageSync('lang')

      // 0: Questions/提问
      // 1: Answer/回答
      // 2: Like！/点赞
      // 3: Featured answers/最佳答案
      // 4: Bookmarks/收藏
    if (lang && lang === 'EN') {
      this.lang = 'EN'
      if (option && option.index) {
        wepy.setNavigationBarTitle({title: this.titleArray[option.index][0]})
      } else {
        wepy.setNavigationBarTitle({title: 'Discover Question'})
      }
    } else {
      this.lang = '中文'
      if (option && option.index) {
        wepy.setNavigationBarTitle({title: this.titleArray[option.index][1]})
      } else {
        wepy.setNavigationBarTitle({title: '发现问题'})
      }
    }

    // TODO: now I am only working on the normal list fetch, the list of specific category needs to be done later.
    await this.loadData()
  }
  async loadData () {
    // wepy.startPullDownRefresh()
    var self = this
    self.currentPage++
    var res = await api.fetchQuestionList({
      query: {
        currentPage: self.currentPage,
        by: self.by,
        type: self.type
      }
    })
    console.log('request get result from server: ' + JSON.stringify(res))
    var data = res.data
    if (data.length) {
      data.forEach(function(item, index) {
        item.timeDiff = self.calcTime(item.createdAt)
      })
      if (self.dataList.length === 0) {
        self.dataList = data
      } else {
        self.dataList.push(...data)
      }
    } else {
      self.currentPage--
    }
    this.$apply()
  }
  /**
 * 时间计算器
 * @param {String} t,yyyy-MM-dd HH:mm:ss格式
 */
   calcTime(t) {
     var str = '';
     if (t) {
       var createdAt = new Date(t)
       var now = new Date()
       var s = now - createdAt
       if (s < (86400000 * 7)) {
         var day = Math.floor(s / 86400000);
         var hour = Math.floor((s % 86400000) / 3600000);
         var minute = Math.floor((s % 86400000 % 3600000) / 60000);
         var seconds = Math.floor(s % 86400000 % 3600000 % 60000) / 1000;
         if (day > 0) {
             str = day + "天前";
             return str;
         }
         if (hour > 0) {
             str = hour + "小时前";
             return str;
         }
         if (minute > 0) {
             str = minute + "分钟前";
             return str;
         }
         if (seconds < 60) {
             str = "刚刚";
             return str;
         }
        } else {
             return t.substring(0, 16);
       }
   } else {
      return str;
   }
  }
  async onReachBottom () {
    console.log('botom');
    await this.loadData()
  }
  async onPullDownRefresh () {
    this.dataList = []
    this.currentPage = 0
    await this.loadData()
  }
  methods = {
    chooseType (index) {
      this.dataList = []
      this.currentPage = -1
      wepy.pageScrollTo({
        scrollTop: 0
      })
      if(index == 5) {
        this.by = 'all'
        this.loadData()
      } else {
        this.by = 'type'
        this.type = index
        this.loadData()
      }
    },
    closeModal () {
      this.showModal = !this.showModal
    },
    filter () {
      this.showModal = true
    },
    navigate (_id) {
      // console.log(_id)
      wepy.navigateTo({url: 'question?post_id=' + _id})
    },
    search () {

    }
  }
}
</script>

