      <view  @tap.stop="go(4)" class="center" style="margin-bottom:5px;background-color:white; justify-content:flex-start;padding: 10px;">

        <view class="center" style="flex:3;justify-content:flex-start;">
          <image src="./favorite.png"style="width: 50px; height: 50px;margin-right: 20px;" />
          <text style="font-size:20px;">{{lang == 'EN' ? 'Bookmarks' : '收藏'}}</text>
