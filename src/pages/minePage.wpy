      <view  @tap.stop="go(0)" class="center" style="justify-content:space-between;margin-bottom:5px;background-color:white; justify-content:flex-start;padding: 10px;">
        <view class="center" style="flex:3;justify-content:flex-start;">
          <image src="./question.png"style="width: 50px; height: 50px;margin-right: 20px;" />
          <text style="font-size:20px;">{{lang == 'EN' ? 'Questions' : '提问'}}</text>
        </view>
        <view class="center" style="flex:1;margin-right:20px;font-size:30px;color:#6fe0e7;justify-content:flex-end;width:100px;">
          <text>{{info.questions.length || 0}}</text>
        </view>
      </view>

      <view  @tap.stop="go(1)" class="center" style="justify-content:space-between;margin-bottom:5px;background-color:white; justify-content:flex-start;padding: 10px;">
        <view class="center" style="flex:3;justify-content:flex-start;">
          <image src="./answer.png"style="width: 50px; height: 50px;margin-right: 20px;" />
          <text style="font-size:20px;">{{lang == 'EN' ? 'Answer' : '回答'}}</text>
        </view>
        <view class="center" style="flex:1;margin-right:20px;font-size:30px;color:#6fe0e7;justify-content:flex-end;width:100px;">
          <text>{{info.answers.length || 0}}</text>
        </view>
      </view>

      <view  @tap.stop="go(3)" class="center" style="margin-bottom:5px;background-color:white; justify-content:flex-start;padding: 10px;">
        <view class="center" style="flex:3;justify-content:flex-start;">
          <image src="./feature-fill.png"style="width: 50px; height: 50px;margin-right: 20px;" />
          <text style="font-size:20px;">{{lang == 'EN' ? 'Featured answers' : '最佳答案'}}</text>
        </view>
        <view class="center" style="flex:1;margin-right:20px;font-size:30px;color:#6fe0e7;justify-content:flex-end;width:100px;">
          <text>{{info.featuredAns.length || 0}}</text>
        </view>
      </view>

      <view  @tap.stop="go(3)" class="center" style="margin-bottom:5px;background-color:white; justify-content:flex-start;padding: 10px;">
        <view class="center" style="flex:3;justify-content:flex-start;">
          <image src="./like-fill.png"style="width: 50px; height: 50px;margin-right: 20px;" />
          <text style="font-size:20px;">{{lang == 'EN' ? 'Liked answers' : '点赞'}}</text>
        </view>
