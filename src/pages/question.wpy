      {id:'123', featured: false, type: 0, numOfBM: 10, numOfLike:3, value0: 'second answer', value1: '', user: {}, lang: 'English(US)', reply: []}
    ]}
  }
  onLoad () {
    var lang = wepy.getStorageSync('lang')
    if (lang && lang === 'EN') {
      this.lang = 'EN'
      wepy.setNavigationBarTitle({title: 'Question'})
    } else {
      this.lang = '中文'
      wepy.setNavigationBarTitle({title: 'Question'})
    }
  }
  onShow () {
  }
  onReady() {
  }
  methods = {
    addFeature () {
      var self = this
      var title = this.lang === 'EN' ? 'Confirm' : '确认'
      var content1 = this.lang === 'EN' ? 'Make this the featured answer?' : '确认设为最佳答案吗？'
      var content2 = this.lang === 'EN' ? 'Close thise question?' : '确认结束问题吗？'
      wepy.showModal({
        title: title,
        content: content1
      }).then(function (res) {
        if (res.confirm) {
          self.feature = true
          self.$apply()
          wepy.showModal({
            title: title,
            content: content2
          }).then(function (res) {
            if (res.confirm) {
              self.closed = true
              self.$apply()
            } else if (res.cancel) {

            }
          })
        } else if (res.cancel) {

        }
      })
    },
    showModal () {
      this.replyMsg = ''
      this.showModal = true
    },
    closeModal () {
      this.showModal = !this.showModal
    },
    reply () {
      this.replyMsg = '@someone: '
      this.showModal = true
    },
    addLike () {
      this.like = !this.like
    },
    more (index) {
      var titleArray = []
      if (index === '0') {
        var notifi = this.question.notificationIsOn ? ['Turn off notification', '关闭消息通知'] : ['Turn on notification', '开启消息通知']
        titleArray = [['Close the question', '结束问题'], notifi, ['Edit', '修改'], ['Delete', '删除']]
        titleArray = this.lang === 'EN' ? [titleArray[0][0], titleArray[1][0], titleArray[2][0], titleArray[3][0]] : [titleArray[0][1], titleArray[1][1], titleArray[2][1], titleArray[3][1]]
      } else {
        titleArray = ['Report', '举报']
        titleArray = this.lang === 'EN' ? [titleArray[0]] : [titleArray[1]]
      }
      var self = this
      wepy.showActionSheet({
        itemList: titleArray
      }).then(function (res) {
        if (res.confirm) {
          self.reported = true
        } else if (res.cancel) {

        }
      })
    },
    bookmark () {
      this.bookmark = !this.bookmark
    }
  }
}
