              </view>
              <view hover-class="click" class="center" style="flex-direction:row;" @tap.stop="bookmark('reply', {{item._id}})">
                <image wx:if="{{item.bookmarkedBy == false}}" src="./bookmark-empty.png" style="width:20px; height:20px;" />
