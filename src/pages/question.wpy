<script>
import wepy from 'wepy'
import api from './../api/api'

export default class TestPage extends wepy.page {
  onShareAppMessage (res) {
  //  if (res.from === 'button') {
  //    // 来自页面内转发按钮
  //    console.log(res.target)
  //  }
    return {
     title: 'Nice question!',
     path: '/page/page3?id=123',
     success: function(res) {
       // 转发成功
     },
     fail: function (res) {
       // 转发失败
     }
    }
  }
  config = {
    // navigationBarTitleText: 'Question',
    backgroundColor: '#3FC5F4',
    navigationBarBackgroundColor: '#3FC5F4',
    navigationBarTextStyle: 'white',
    enablePullDownRefresh: false
  }
  data = {
    screenWidth: wepy.getSystemInfoSync().windowWidth,
    screenHeight: wepy.getSystemInfoSync().windowHeight,
    replyMsg: '',
    showModal: false,
    feature: false,
    closed: false,
    reported: false,
    lang: '',
    // question: {id:'12', notificationIsOn: true, additional: 'here is additional content.... I have question regarding this point, anyone can help me out sovle it will be highly rewarded.', featuredApplied: true, closed: true, type: 0, numOfBM: 20, numOfLike:1, value0: 'awesome', value1: '', numOfAns: 9, user: {}, lang: 'English(US)', reply: [
    //   {id:'13', featured: true, type: 0, numOfBM: 110, numOfLike:36, value0: 'first answer', value1: '', user: {}, lang: 'English(US)', reply: []},
    //   {id:'123', featured: false, type: 0, numOfBM: 10, numOfLike:3, value0: 'second answer', value1: '', user: {}, lang: 'English(US)', reply: []}
    // ]}
    question: {},
    currentUser: { _id: '5a541af57794326cc69a331c' },
    to_user: {}
  }
  async onLoad (option) {
    // console.log('option: ' + JSON.stringify(option));
    var lang = wepy.getStorageSync('lang')
    if (lang && lang === 'EN') {
      this.lang = 'EN'
      wepy.setNavigationBarTitle({title: 'Question'})
    } else {
      this.lang = '中文'
      wepy.setNavigationBarTitle({title: '问题'})
    }

    var self = this
    var res = await api.fetchQuestion({
      query: {
        post_id: option.post_id,
        user_id: self.currentUser._id
      }
    })
    console.log('request get result from server: ' + JSON.stringify(res))
    var data = res.data
    if (data) {
      data.timeDiff = self.calcTime(data.createdAt)
      if (data.reply.length) {
        data.reply.forEach(function(item) {
          item.timeDiff = self.calcTime(item.createdAt)
        })
      }
      self.question = data
      this.$apply()
      // console.log('question: ' + JSON.stringify(self.question))
    } else {
      wepy.showModal({
        title: '提示',
        content: '发生异常，请重新尝试。',
        showCancel: false
      })
    }

  }
  /**
 * 时间计算器
 * @param {String} t,yyyy-MM-dd HH:mm:ss格式
 */
   calcTime(t) {
     var str = '';
     if (t) {
       var createdAt = new Date(t)
       var now = new Date()
       var s = now - createdAt
       if (s < (86400000 * 7)) {
         var day = Math.floor(s / 86400000);
         var hour = Math.floor((s % 86400000) / 3600000);
         var minute = Math.floor((s % 86400000 % 3600000) / 60000);
         var seconds = Math.floor(s % 86400000 % 3600000 % 60000) / 1000;
         if (day > 0) {
             str = day + "天前";
             return str;
         }
         if (hour > 0) {
             str = hour + "小时前";
             return str;
         }
         if (minute > 0) {
             str = minute + "分钟前";
             return str;
         }
         if (seconds < 60) {
             str = "刚刚";
             return str;
         }
        } else {
             return t.substring(0, 16);
       }
   } else {
      return str;
   }
  }
  onShow () {
  }
  onReady() {
  }
  methods = {
    replyMsg (e) {
      this.replyMsg = e.detail.value
    },
    addFeature () {
      var self = this
      var title = this.lang === 'EN' ? 'Confirm' : '确认'
      var content1 = this.lang === 'EN' ? 'Make this the featured answer?' : '确认设为最佳答案吗？'
      var content2 = this.lang === 'EN' ? 'Close thise question?' : '确认结束问题吗？'
      wepy.showModal({
        title: title,
        content: content1
      }).then(function (res) {
        if (res.confirm) {
          self.feature = true
          self.$apply()
          wepy.showModal({
            title: title,
            content: content2
          }).then(function (res) {
            if (res.confirm) {
              self.closed = true
              self.$apply()
            } else if (res.cancel) {

            }
          })
        } else if (res.cancel) {

        }
      })
    },
    showModal () {
      this.replyMsg = ''
      this.showModal = true
    },
    closeModal (flag) {
      this.showModal = !this.showModal
      if(flag == 0) {
        this.replyMsg = ''
      } else if(flag == 1) {
        //going to send
        var self = this
        if (this.replyMsg.length) {
          wepy.showModal({
            title: '确定',
            content: '确定上传回复吗？'
          }).then( async function (res) {
            if (res.confirm) {
              try {
                  var pack = {
                    type: 'reply',
                    post_id: self.question._id,
                    from_user_id: self.currentUser._id,
                    value0: self.replyMsg
                  }
                  const res = await api.answer({
                    query: {
                      pack: pack
                    },
                    method: 'POST'
                  })
                  console.log('data back from new post: ' + JSON.stringify(res))
                  wepy.hideToast()
                  if (res.data.flag == 'success') {
                    await wepy.showToast({
                      title: '发送成功！',
                      icon: 'success',
                      duration: 1500,
                      mask: true
                    })
                    // wepy.setStorageSync('_uploaded', true)
                    wepy.navigateTo({
                      url: 'question?post_id=' + res.data.post_id
                    })
                  } else {
                    wepy.showModal({
                      title: '提示',
                      content: '抱歉，服务器发生异常，请联系泽铭: flyinghawker',
                      showCancel: false
                    })
                  }
                } catch (e) {
                  wepy.hideToast()
                  wepy.showModal({
                    title: '提示',
                    content: '抱歉，服务器发生异常，请联系泽铭: flyinghawker',
                    showCancel: false
                  })
                  return e
                }
            } else {

            }
          })
        } else {
          wepy.showModal({
            title: '提醒',
            content: '请填写完整？'
          })
        }
      }
    },
    reply (q) {
      this.to_user = {_id: q._id}
      this.replyMsg = '@' + q.from_user.name + ': '
      this.showModal = true
    },
    more (index) {
      var titleArray = []
      if (index === '0') {
        var notifi = this.question.notificationIsOn ? ['Turn off notification', '关闭消息通知'] : ['Turn on notification', '开启消息通知']
        titleArray = [['Close the question', '结束问题'], notifi, ['Edit', '修改'], ['Delete', '删除']]
        titleArray = this.lang === 'EN' ? [titleArray[0][0], titleArray[1][0], titleArray[2][0], titleArray[3][0]] : [titleArray[0][1], titleArray[1][1], titleArray[2][1], titleArray[3][1]]
      } else {
        titleArray = ['Report', '举报']
        titleArray = this.lang === 'EN' ? [titleArray[0]] : [titleArray[1]]
      }
      var self = this
      wepy.showActionSheet({
        itemList: titleArray
      }).then(function (res) {
        if (res.confirm) {
          self.reported = true
        } else if (res.cancel) {

        }
      })
    },
    async addLike (type, id) {
      //坑爹，小程序不是引用传递
      var self = this
      var post = {}
      if(type == 'question') {
        post = self.question
      } else if (type == 'reply') {
        post = self.question.reply.find(function(item) {
          return item._id == id
        })
      }
      console.log('post: ' + JSON.stringify(post));
      var res = await api.like({
        query : {
          pack: {
            user_id: self.currentUser._id,
            post_id: post._id,
            likedBy: post.likedBy
          }
        },
        method: 'POST'
      })
      console.log("likedBy server info: " + JSON.stringify(res))
      if(res.data && res.data.flag === 'success') {
        console.log(post);
        // console.log(post.bookmarkedBy);
        post.likedBy = !(post.likedBy)
        // console.log(post.bookmarkedBy);
        console.log(post);
        this.$apply()
      }
    },
    async bookmark (type, id) {
      //坑爹，小程序不是引用传递
      var self = this
      var post = {}
      if(type == 'question') {
        post = self.question
      } else if (type == 'reply') {
        post = self.question.reply.find(function(item) {
          return item._id == id
        })
      }
      console.log('post: ' + JSON.stringify(post));
      var res = await api.bookmark({
        query : {
          pack: {
            user_id: self.currentUser._id,
            post_id: post._id,
            bookmarked: post.bookmarkedBy
          }
        },
        method: 'POST'
      })
      console.log("bookmark server info: " + JSON.stringify(res))
      if(res.data && res.data.flag === 'success') {
        // console.log(post);
        // console.log(post.bookmarkedBy);
        post.bookmarkedBy = !(post.bookmarkedBy)
        // console.log(post.bookmarkedBy);
        // console.log(post);
        this.$apply()
      }
    }
  }
}
</script>

